{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@neocratia/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@neocratia/shared/themes": ["libs/shared/themes/src/index.ts"],
      "@neocratia/shared/ui-main-nav": ["libs/shared/ui-main-nav/src/index.ts"],
      "@neocratia/colombia/feature-shell": [
        "libs/colombia/feature-shell/src/index.ts"
      ],
      "@neocratia/colombia/feature-politicos": [
        "libs/colombia/feature-politicos/src/index.ts"
      ],
      "@neocratia/shared/ui-material": ["libs/shared/ui-material/src/index.ts"],
      "@neocratia/shared/data-politicians": [
        "libs/shared/data-politicians/src/index.ts"
      ],
      "@neocratia/shared/ui-politicians": [
        "libs/shared/ui-politicians/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
